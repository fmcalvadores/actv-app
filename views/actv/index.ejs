
<%- include('../partials/navbar') %>
<div class="row">
    <% if (typeof completeName != 'undefined' && completeName.length > 0) {%>
        
        <div class="col">
            <div class="alert alert-info show" role="alert">
                <h6>Welcome back, <strong><%=completeName%></strong></h6>
                </div>
        </div>

        <% } %>

        <div class="row mb-5">      
            <div class="col-sm-3" >
                <div class="" style="border: 0px;">
                    <a href="/actv/new" class="btn btn-primary text-center">
                        <i class="fas fa-plus"></i> Add a post
                    </a>
                </div>
            </div>
        </div>
        
        <div class="row mb-5">  
            <% if(actvList.length > 0) { %>            
                <% for (let t of actvList) {%> 
                    <div class="col-lg-3 mb-3" >
                        <div class="card ">
                            <a href="/actv/<%= t.id%>" class="btn btn-link">
                                <img src="../img/test-image.jpg" class="card-img-top" alt="NO IMAGE" style="border-radius: 2%;">
                            </a>
                            <div class="card-body">
                                <h3 class="text-to-ellipsis" style="min-height: 70px;"><%= t.title %></h3>
                                <small>
                                    Posted by 
                                    <span class="badge text-bg-secondary"><%= (t.postedBy == null ? 'Anonymous' : t.postedBy) %></span>
                                    <%= t.dateposted %>
                                </small>
                                <hr>
                                <p style="height: 100px;">
                                    <i class="fas fa-map-marker"></i> <b><%= t.location %></b>
                                    <span class="card-text text-to-ellipsis"><%= t.description %></span>
                                </p>
                                <a href="/actv/<%= t.id%>" class="btn btn-outline-primary btn-block">View Info</a>
                            </div>
                        </div>
                    </div>            
                <% } %>
            <% } else { %> 
                <div class="mb-2">
                    <div class="jumbotron container-fluid">
                        <div class="container">
                            <h1 class="display-4"><i class="fas fa-feather"></i>No posts yet!</h1>
                            <p class="lead">Be the first one to post here!</p>
                            <hr>
                        </div>
                        </div>
                </div>
                
            <% } %>
        </div>    
</div>
    
<%- include('../partials/footer') %>
