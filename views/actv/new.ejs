              <input type="number" name="price" class="form-control" placeholder="Add Title" required id="price" aria-describedby="price">
            </div>
            <div class="form-group">
              <label for="location">Location</label>
              <input type="text" name="location" class="form-control" placeholder="Add Location" required id="location" aria-describedby="location">
